<div class="container">
  <h1>Your Rankings</h1>

  <table class="table table-striped">
    <thead>
        <th>Rank</th>
        <th>Movie</th>
        <th>Year</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each_with_index do |movie, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= movie.title %></td>
          <td><%= movie.year %></td>
          <td><%= movie.total_score %></td>
        </tr>
      <% end %>
    </tbody>

</div>

<div class="container">
  <%= link_to "Create Ranking", new_movie_path %>
</div>
